@model App_EmployeeManagement.DBModel.Employee

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Employee</title>
</head>
<body>

    <h2>Are you sure you want to delete this employee?</h2>

    <div>
        <strong>Employee Name:</strong> @Model.FirstName @Model.LastName <br />
        <strong>Email:</strong> @Model.Email <br />
        <strong>Department:</strong> @Model.Department?.DepartmentName
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.EmployeeId" />
        <button type="submit">Yes, Delete</button>
        <a href="@Url.Action("Employee", "Employee")">Cancel</a>
    </form>

</body>
</html>