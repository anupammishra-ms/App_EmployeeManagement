@model App_EmployeeManagement.DBModel.Employee

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Details</title>
</head>
<body>

    <h2>Employee Details</h2>

    <div>
        <strong>Employee ID:</strong> @Model.EmployeeId <br />
        <strong>First Name:</strong> @Model.FirstName <br />
        <strong>Last Name:</strong> @Model.LastName <br />
        <strong>Email:</strong> @Model.Email <br />
        <strong>Department:</strong> @Model.Department?.DepartmentName <br />
    </div>

    <a href="@Url.Action("Employee", "Employee")">Back to List</a>

</body>
</html>