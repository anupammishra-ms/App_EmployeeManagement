@model App_EmployeeManagement.DBModel.Employee

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Employee</title>
</head>
<body>

    <h2>Edit Employee</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="EmployeeId" />

        <div>
            <label for="FirstName">First Name</label>
            <input type="text" id="FirstName" asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div>
            <label for="LastName">Last Name</label>
            <input type="text" id="LastName" asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div>
            <label for="Email">Email</label>
            <input type="email" id="Email" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div>
            <label for="DepartmentId">Department</label>
            <select asp-for="DepartmentId" asp-items="ViewBag.Departments"></select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>

        <button type="submit">Save Changes</button>
        <a href="@Url.Action("Employee", "Employee")">Cancel</a>
    </form>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.6.0.min.js"></script>

</body>
</html>